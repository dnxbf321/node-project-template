{
  "use": ["postcss-easy-import", "stylelint", "precss", "rucksack-css", "autoprefixer", "cssnano", "postcss-reporter"],
  "postcss-easy-import": {
    "prefix": "_"
  },
  "stylelint": {
    "config": {
      "extends": "stylelint-config-standard",
      "rules": {}
    }
  },
  "precss": {
    "import": {
      "disable": true
    }
  },
  "rucksack-css": {
    "fallbacks": true
  },
  "autoprefixer": {
    "browsers": ["last 2 versions", "> 5%", "safari >= 5", "ie >= 8", "opera >= 12", "Firefox ESR", "iOS >= 6", "android >= 4"]
  },
  "cssnano": {
    "safe": true
  },
  "postcss-reporter": {
    "clearMessages": true
  }
}